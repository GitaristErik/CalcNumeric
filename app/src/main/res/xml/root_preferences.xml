<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings.category.theme">

        <ListPreference
                app:key="theme"
                app:title="@string/settings.theme.title"
                app:defaultValue="reply"
                app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings.category.other">

        <ListPreference
                app:key="language"
                app:title="@string/settings.language.title"
                app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

</PreferenceScreen>