<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CalculatorButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:tint">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">
            @dimen/margin.small.extra
        </item>
        <item name="android:layout_marginVertical" tools:targetApi="o">
            @dimen/margin.small.extra
        </item>
        <item name="backgroundTint">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CalculatorButton.Numpad" parent="CalculatorButton">
        <item name="backgroundTint">?attr/colorOnSurfaceInverse</item>
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
        <item name="android:tint">?attr/colorSurfaceInverse</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimaryInverse</item>
    </style>

    <style name="CalculatorButton.Secondary" parent="CalculatorButton">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondaryContainer</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="CalculatorButton.Primary" parent="CalculatorButton">
        <item name="backgroundTint">?attr/colorPrimaryInverse</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="CalculatorButton.Danger" parent="CalculatorButton">
        <item name="backgroundTint">?attr/colorErrorContainer</item>
        <item name="android:textColor">?attr/colorOnErrorContainer</item>
        <item name="android:tint">?attr/colorOnErrorContainer</item>
        <item name="rippleColor">?attr/colorError</item>
    </style>

    <style name="CalculatorButton.Function" parent="CalculatorButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="CalculatorButton.Function.Additional" parent="CalculatorButton.Function">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleSmall</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>